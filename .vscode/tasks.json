      "label": "build hand_tracker",
      "command": "bazel build --action_env=LD_LIBRARY_PATH=$HOME/gcc/install/lib64 --copt=-Wno-incompatible-pointer-types --compilation_mode=dbg --jobs=2  --define MEDIAPIPE_DISABLE_GPU=1 nullspaces:hand_runner",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "build hand_tracker explained",
      "command": "bazel  build --compilation_mode=dbg --jobs=8  --define MEDIAPIPE_DISABLE_GPU=1 nullspaces:hand_runner --verbose_explanations --explain=explain.txt",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "build hello world",
      "command": "bazel run --jobs=2 --define MEDIAPIPE_DISABLE_GPU=1 mediapipe/examples/desktop/hello_world:hello_world",
      "problemMatcher": []
    }
  ]
}